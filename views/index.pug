extends layout

block content
  form(action="/search", method="GET")
    input(type="text", name="query", placeholder="Search by topic or title" required)
    button(type="submit") Search
  
  ul
    each post in posts
      li
        a(href=`/post/${post.id}`) #{post.topic}: #{post.title} by #{post.author} (#{post.created_at.toLocaleDateString()})

