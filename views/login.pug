extends layout

block content
    h2 Login
    form(method='post' action='/login' id='login-form')
        input(type='text' placeholder='Username' name='username' style="display: block" required) 
        input(type='password' placeholder='Password' name='password' style="display: block" required) 

        if errorMsg
            p(style="color: #d9534f") #{errorMsg}

        button(type='submit' style="display: block") Login
    p Don't have an account? 
    a(href="/signup") Sign up